        }
    }

    @@media screen and (max-width: 1050px) and (max-height: 700px) {
        .headerLeft .headerLeftBotText {
            font-size: 30px;
        }
    }

    @@media screen and (max-width: 1000px) {
        #content {
            margin: 0 100px;
        }

        .headerLeft .headerLeftBotText {
    font-size: 35px;
        }
    }

    @@media screen and (max-width: 800px) {
        #content {
            margin: 0 50px;
        }

        .popupContainer {
            zoom: 80%;
        }
    }

    @@media screen and (max-width: 720px) {
        body {
            margin-top: -30px;
        }

        .headerLeft .headerLeftBotText {
            font-size: 30px;
        }

        .headerLeft .headerLeftTopText {
            font-size: 15px;
        }

        .headerRight .headerRightText {
            font-size: 15px;
        }

        #content {
            margin: 30px;
        }

        #featuresList {
            flex-direction: column;
            gap: 0;
            align-items: center;
        }

        #featuresList .featuresListTop {
            gap: 30px;
        }

        #featuresList .featuresListBot {
            margin-top: 30px;
            gap: 30px;
        }

        .featuresListTop .featuresItems {
            height: 50px;
            zoom: 100%;
        }

        .featuresListBot .featuresItems {
            height: 50px;
            zoom: 100%;
        }

        .featuresItems .text {
            justify-content: flex-start;
            font-size: 15px;
            text-align: center;
        }

        .featuresItems:hover .text {
            justify-content: flex-start;
            font-size: 15px;
            text-align: center;
            color:aquamarine;
            background-color:black;
        }

        #featuresList .featuresItems .icon {
            font-size: 30px;
            padding-right: 30px;
        }

        .popupContainer {
            zoom: 80%;
        }

        .popup {
            width: 500px;
            height: 600px;

        }
        #footer {
            justify-content: center;
        }

        #footer p {
            font-size: 15px;
        }
    }

    @@media screen and (max-width: 720px) and (max-height: 800px){
        #featuresList .featuresListTop {
            gap: 15px;
        }

        #featuresList .featuresListBot {
            gap: 15px
        }


    }

    @@media screen and (max-width: 550px) {
        .headerLeft .headerLeftBotText {
            font-size: 25px;
        }

        .popupContainer {
            zoom: 70%;
        }

        .popup {
            width: 90%;
        }
    }

