        <!-- Main content -->
        <section class="content" >
        <style>

    .content {
        background-image:src("~/wwwroot/img/dai-hoc-quang-binh.png");
        background-repeat: no-repeat;
        background-size: cover;
        background-position: top;
        height: 100vh;
        position: relative;
    }

    /* FEATURE LIST */
    #featuresList {
        display: flex;
        justify-content: center;
        flex-direction: column;
        /* align-items: center; */
        height: 70%;
        /* margin-top: 10%; */
    }

    #featuresList .featuresListTop {
        display: grid;
        grid-template-columns: auto auto auto auto;
        /* gap: 50px; */
        justify-content: space-around;
    }

    #featuresList .featuresListBot {
        display: grid;
        grid-template-columns: auto auto auto;
        /* gap: 50px; */
    justify-content: space-evenly;
        margin-top: 70px;
    }

    .featuresItems {
        width: 285px;
        height: 200px;
        border-radius: 10px;
        border: 2px solid;
        background-color: transparent;
        border-color: black;
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        flex-direction: column;
        overflow: hidden;
        position: relative;
    }

    .featuresItems .icon {
        font-size: 80px;
        transition: .5s;
        padding-top: 5%;
    }

    .featuresItems .text {
        font-size: 18px;
        font-family: var(--primary-font);
        font-weight: 600;
        color: black;
        /* mix-blend-mode: screen; */
        /* background-color: white; */
        width: 100%;
        height: 120%;
        padding: 5px 5px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-evenly;
        text-align: center;
        transition: .1s;
        position: absolute;
        z-index: 1;
    }

    .featuresItems:hover .text {
        font-size: 18px;
        font-family: var(--primary-font);
        font-weight: 600;
        color: blue;
      
        background-color: blue;
        padding: 5px 5px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-evenly;
        text-align: center;
        cursor: pointer;
        position: absolute;
        z-index: 1;
    }

    .popupContainer {
        position: absolute;
        left: 0;
        right: 0;
        top: 0;
        bottom: 0;
        margin: auto;
        visibility: hidden;
        /* display: none; */
    }

    .popupBackground {
        position: absolute;
        left: 0;
        right: 0;
        top: 0;
        bottom: 0;
        top: 0;
        margin: auto;
        width: 100%;
        height: 100%;
        background-color: white;
        opacity: .4;
    }

    .popup {
        position: absolute;
        left: 0;
        right: 0;
        top: 0;
        bottom: 0;
        opacity: 1;
        margin: auto;
        width: 800px;
        height: 500px;
        border-radius: 15px;
        background-color: cadetblue;
        padding: 25px 25px;
        z-index: 3;
    }

    .popupHead {
        margin-bottom: 20px;
        height: 10%;
    }

    .popupHead h2 {
        font-family: var(--primary-font);
        font-weight: 800;
        font-size: 26px;
        color:darkturquoise
    }

    .popupBody {
        height: 60%;
        padding-right: 70px;
        padding-left: 15px;
        margin-bottom: 30px;
    }

    .popupBody .popupText {
        font-family: var(--primary-font);
        text-indent: -10px;
        font-size: 18px;
        margin-bottom: 5px;
        color:white;
    }

    progress {
        border-radius: 7px;
        width: 50%;
        height: 22px;
        margin-right: 5px;
        margin-left: 20px;
        /* margin-left: -11.5%; */
        /* box-shadow: 1px 1px 4px rgba( 0, 0, 0, 0.2 ); */
    }

    progress::-webkit-progress-bar {
        background-color: black;
        border-radius: 7px;
        border: solid 2px #333;
    }

    progress::-webkit-progress-value {
        background-color: lawngreen;
        border-radius: 2px;
        /* box-shadow: 1px 1px 5px 3px rgba( 255, 0, 0, 0.8 ); */
    }

    .popupFoot {
        height: 15%;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
    }

    .popupFoot h4 {
        font-family: var(--primary-font);
        font-size: 18px;
        color:greenyellow;
        /* margin-right: 30px; */
    }

    .popupButton {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
    }

    .popupButton button {
        cursor: pointer;
        width: 70px;
        height: 30px;
        font-family: var(--primary-font);
        font-weight: 700;
        border: solid 2px #1e1e1e;
        border-radius: 7px;
        /* transition: .5s; */
    }

    .popupButton button:hover {
        background-color: gold;
    }

    .open-popup {
        visibility: visible!important;
    }

    /* FOOTER */
    #footer {
        position: absolute;
        bottom: 0;
        justify-content: center;
        display: flex;
        width: 100%;
    }

    #footer p {
        color: lawngreen;
        font-family: var(--primary-font);
        font-weight: 800;
        font-size: 20px;
        mix-blend-mode: screen;
        background-color: black;
        border-radius: 10px 10px 0 0;
        padding: 0 15px;
        z-index: -1;
    }

