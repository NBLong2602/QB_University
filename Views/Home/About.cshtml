            flex-direction: column;
        }

        .featuresListBot .featuresItems {
            flex-direction: row;
            height: 100px;
        }

        #footer {
            justify-content: flex-end;
        }
    }

    @@media screen and (max-height: 950px){
        .topContainer {
            height: 25%;
            zoom: 90%;
        }

        .headerLeft .headerLeftBotText {
            font-size: 40px;
        }

