@using System.Data
@model DataTable
@{
    ViewData["Title"] = "Quản lý giảng viên";

}
<div class="panel-body" style="padding-top: 12px;" overflow-y:hidden">
    <div style="text-align:right"><a href="add">Thêm User</a></div>
    <table style="width:95%">
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Password</th>
            <th>Full Name</th>
            <th>Phone</th>
            <th>Sửa</th>
            <th>Xóa</th>
        </tr>
        @foreach (DataRow row in @Model.Rows)
        {
            <tr>
                <th>@row["ID"]</th>
                <th>@row["Email"]</th>
                <th>@row["Pass"]</th>
                <th>@row["Full_name"]</th>
                <th>@row["Phone"]</th>
                <th><a href="edit/@row["ID"]">Sửa</a></th>
                <th><a asp-controller="Manage" asp-action="delete" asp-route-id=@row["ID"]>Xóa</a></th>
            </tr>
        }
    </table>
</div>
